generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @unique @db.VarChar(255)
  password String @db.VarChar(255)
  email    String @db.VarChar(255)
}

model Vocabulary {
  id               Int      @id @default(autoincrement())
  origin           String   @unique(map: "constraint_name") @db.VarChar(255)
  translation      String?
  audioUrl         String?
  mTerminalDictUtl String?
  createdAt        DateTime @default(now()) @db.Timestamp(6)
}

model Ecdict {
  word        String  @unique @db.Text
  phonetic    String? @db.Text
  definition  String? @db.Text
  translation String? @db.Text
  pos         String? @db.Text
  collins     String? @db.Text
  oxford      String? @db.Text
  tag         String? @db.Text
  bnc         String? @db.Text
  frq         String? @db.Text
  exchange    String? @db.Text
  detail      String? @db.Text
  audio       String? @db.Text
}
